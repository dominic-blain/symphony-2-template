<?xml version="1.0" encoding="UTF-8"?>
<xsl:stylesheet version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform">


<!-- GUTTER V: button (grid) -->
<xsl:variable name="recipe-gutter-v-button">
	<add class="margin-top-minus-thinner" />
</xsl:variable>

<!-- GUTTER V: button (item) -->
<xsl:variable name="recipe-gutter-v-button-item">
	<add class="padding-top-thinner" />
	<add class="border-box" />
</xsl:variable>


<!-- GUTTER V: card (grid) -->
<xsl:variable name="recipe-gutter-v-card">
	<add class="margin-top-minus-broad" />
</xsl:variable>

<!-- GUTTER V: card (item) -->
<xsl:variable name="recipe-gutter-v-card-item">
	<add class="padding-top-broad" />
	<add class="border-box" />
</xsl:variable>


</xsl:stylesheet>
