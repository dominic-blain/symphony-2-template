<?xml version="1.0" encoding="UTF-8"?>
<xsl:stylesheet version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform">


<!-- GUTTER H: button (grid) -->
<xsl:variable name="recipe-gutter-h-button">
	<add class="margin-left-minus-thinner" />
</xsl:variable>

<!-- GUTTER H: button (item) -->
<xsl:variable name="recipe-gutter-h-button-item">
	<add class="padding-left-thinner" />
	<add class="border-box" />
</xsl:variable>


<!-- GUTTER H: card (grid) -->
<xsl:variable name="recipe-gutter-h-card">
	<add class="margin-left-minus-broad" />
</xsl:variable>

<!-- GUTTER H: card (item) -->
<xsl:variable name="recipe-gutter-h-card-item">
	<add class="padding-left-broad" />
	<add class="border-box" />
</xsl:variable>


</xsl:stylesheet>